{
  "name": "swconcord",
  "displayName": "Swedenborg Concordance Language",
  "description": "Syntax highlighting of Swedenborg Concordance text files",
  "icon": "icon.png",
  "version": "0.0.2",
  "publisher": "new-christian-bible-study",
  "repository": {
    "type": "git",
    "url": "https://github.com/New-Christian-Bible-Study/swconcord-lang-vscode.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [ {
        "id": "swconcord",
        "aliases": [ "Swedenborg Concordance", "swconcord" ],
        "extensions": [ ".swconcord" ],
        "configuration": "./language-configuration.json"
      } ],
    "grammars": [ {
        "language": "swconcord",
        "scopeName": "source.swconcord",
        "path": "./syntaxes/swconcord.tmLanguage.json"
      } ],
    "configurationDefaults": {
      "editor.tokenColorCustomizations": {
        "textMateRules": [
          {
            "scope": [
              "comment.control.swconcord"
            ],
            "settings": {
              "foreground": "#11e88b"
            }
          },
          {
            "scope": [
              "principal.phrase.line.swconcord"
            ],
            "settings": {
              "fontStyle": "underline"
            }
          },
          {
            "scope": [
              "ref.abbrev"
            ],
            "settings": {
              "fontStyle": "bold",
              "foreground": "#1180e8"
            }
          },
          {
            "scope": [
              "ref.section"
            ],
            "settings": {
              "fontStyle": "bold",
              "foreground": "#1180e8"
            }
          }
        ]
      }
    }
  }
}
